---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Hero from '../components/Hero.astro';
import BrandsSection from '../components/BrandsSection.astro';
import ApplicationsSection from '../components/ApplicationsSection.astro';
import GallerySection from '../components/GallerySection.astro';
import EtsySection from '../components/EtsySection.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Awakened AI | Portfolio - Multi-brand Creative Studio">
  <Navigation />
  <main>
    <Hero />
    <BrandsSection />
    <ApplicationsSection />
    <GallerySection />
    <EtsySection />
  </main>
  <Footer />
</Layout>

<script>
  // Smooth scroll behavior with Lenis (optional enhancement)
  document.addEventListener('DOMContentLoaded', () => {
    // @ts-ignore
    const gsap = window.gsap;
    // @ts-ignore
    const ScrollTrigger = window.ScrollTrigger;

    if (!gsap || !ScrollTrigger) return;

    // Refresh ScrollTrigger after all content loads
    setTimeout(() => {
      ScrollTrigger.refresh();
    }, 100);

    // Add loading complete class
    document.body.classList.add('loaded');
  });
</script>

<style is:global>
  /* Page load animation */
  body:not(.loaded) {
    overflow: hidden;
  }

  body.loaded {
    overflow-x: hidden;
  }

  /* Smooth section transitions */
  section {
    will-change: transform;
  }

  /* Performance optimization for animations */
  .bento-card,
  .app-card,
  .gallery-item,
  .video-card,
  .product-card {
    will-change: transform, opacity;
    backface-visibility: hidden;
    -webkit-backface-visibility: hidden;
  }
</style>
