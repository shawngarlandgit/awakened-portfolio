---

<section id="founder" class="py-20 md:py-28 relative">
  <!-- Subtle gradient background -->
  <div class="absolute inset-0 bg-gradient-to-b from-transparent via-[#F6728008] to-transparent pointer-events-none"></div>

  <div class="container mx-auto px-6 relative z-10">
    <div class="max-w-4xl mx-auto founder-content">
      <!-- Main card -->
      <div class="glass-dark rounded-3xl p-8 md:p-12 border border-white/10 relative overflow-hidden">
        <!-- Decorative accent -->
        <div class="absolute top-0 right-0 w-64 h-64 opacity-10" style={`background: radial-gradient(circle at top right, ${founder.color}, transparent 70%);`}></div>

        <div class="relative z-10">
          <!-- Header row -->
          <div class="flex flex-col md:flex-row md:items-start gap-6 md:gap-8 mb-8">
            <!-- Profile photo with teal gradient ring - exact match to awakenedai.online (280px) -->
            <div class="founder-photo-container rounded-full p-[4px] bg-gradient-to-br from-[#2DD4BF] via-[#14B8A6] to-[#0D9488] flex-shrink-0 mx-auto md:mx-0 shadow-lg shadow-black/30" style="width: 180px; height: 180px;">
              <div class="w-full h-full rounded-full overflow-hidden bg-[#1a1a2e]">
                <img
                  src="/images/founder-photo.png"
                  alt="Shawn Garland - Founder of Awakened AI"
                  style="width: 220%; height: 220%; object-fit: cover; object-position: 30% 10%; transform: translate(-28%, 0%);"
                  loading="lazy"
                />
              </div>
            </div>

            <!-- Info -->
            <div class="text-center md:text-left flex-grow">
              <h2 class="text-3xl md:text-4xl font-bold text-white mb-2">{founder.name}</h2>
              <p class="text-[#F67280] text-lg font-medium mb-1">{founder.title}</p>
              <p class="text-white/60 mb-4">{founder.experience}</p>

              <!-- Credential badges -->
              <div class="flex flex-wrap justify-center md:justify-start gap-3">
                {credentials.map((cred) => (
                  <div class="flex items-center gap-2 px-3 py-1.5 bg-white/5 rounded-full border border-white/10">
                    <Icon name={cred.icon} class="w-4 h-4 text-[#F67280]" />
                    <span class="text-white/80 text-sm">{cred.value}</span>
                    <span class="text-white/40 text-sm">{cred.label}</span>
                  </div>
                ))}
              </div>
            </div>
          </div>

          <!-- Mission statement -->
          <div class="mb-8">
            <p class="text-white/70 text-lg leading-relaxed">
              {founder.mission}
            </p>
          </div>

          <!-- Background & Social -->
          <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 pt-6 border-t border-white/10">
            <p class="text-white/50 text-sm">
              <Icon name="heroicons:building-office-2" class="w-4 h-4 inline mr-1" />
              {founder.background}
            </p>

            <!-- Social links -->
            <div class="flex items-center gap-3">
              {socials.map((social) => (
                <a
                  href={social.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="w-10 h-10 rounded-xl bg-white/5 hover:bg-white/10 border border-white/10 hover:border-[#F67280]/50 flex items-center justify-center text-white/60 hover:text-white transition-all duration-300"
                  aria-label={social.name}
                >
                  <Fragment set:html={socialIcons[social.icon]} />
                </a>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // @ts-ignore
    const gsap = window.gsap;
    // @ts-ignore
    const ScrollTrigger = window.ScrollTrigger;

    if (!gsap || !ScrollTrigger) return;

    // Founder section fade in
    gsap.fromTo('.founder-content',
      { y: 60, opacity: 0 },
      {
        scrollTrigger: {
          trigger: '#founder',
          start: 'top 80%',
          end: 'top 50%',
          scrub: 1
        },
        y: 0,
        opacity: 1
      }
    );
  });
</script>

<style>
  .glass-dark {
    background: rgba(255, 255, 255, 0.03);
    backdrop-filter: blur(10px);
  }

  /* Exact photo cropping to match awakenedai.online */
  .founder-photo {
    width: 180%;
    height: 180%;
    object-fit: cover;
    object-position: 25% 15%;
    transform: translate(-22%, -5%);
  }
</style>
