---

<section id="videos" class="py-24 md:py-32 relative bg-gradient-to-b from-transparent via-[#0d0d15] to-transparent">
  <div class="container mx-auto px-6">
    <!-- Section header -->
    <div class="text-center mb-16 videos-header">
      <p class="text-[#E85D75] text-sm md:text-base uppercase tracking-widest mb-4">Video Content</p>
      <h2 class="text-4xl md:text-6xl font-bold text-white mb-6">
        Watch & <span class="text-gradient-pink">Learn</span>
      </h2>
      <p class="text-white/60 max-w-2xl mx-auto text-lg">
        Educational content across YouTube, TikTok, and Instagram from the Awakened AI ecosystem.
      </p>
    </div>

    <!-- Featured video -->
    <div class="mb-12 featured-video">
      <div class="relative overflow-hidden rounded-3xl glass-dark border border-white/10 group cursor-pointer">
        <div class="aspect-video bg-gradient-to-br from-[#E85D75]/20 to-[#4B3F72]/20 flex items-center justify-center">
          <!-- Play button -->
          <div class="w-20 h-20 rounded-full bg-white/10 backdrop-blur-sm flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
            <svg class="w-10 h-10 text-white ml-1" fill="currentColor" viewBox="0 0 24 24">
              <path d="M8 5v14l11-7z"/>
            </svg>
          </div>
        </div>
        <div class="absolute bottom-0 left-0 right-0 p-6 bg-gradient-to-t from-black/80 to-transparent">
          <p class="text-[#FFDD57] text-sm mb-2">Featured</p>
          <h3 class="text-2xl font-bold text-white mb-2">The Complete ADHD Productivity System</h3>
          <p class="text-white/60">A comprehensive guide to building systems that work with your neurodivergent brain.</p>
        </div>
      </div>
    </div>

    <!-- Video grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 videos-grid">
      {videos.map((video, index) => (
        <div
          class="video-card group relative overflow-hidden rounded-2xl glass-dark border border-white/5 hover:border-white/20 transition-all duration-500 cursor-pointer"
          data-index={index}
        >
          <!-- Thumbnail -->
          <div class="relative aspect-video bg-gradient-to-br from-[#4B3F72]/30 to-[#0a0a0f]/50 overflow-hidden">
            <!-- Placeholder -->
            <div class="absolute inset-0 flex items-center justify-center">
              <div class="w-16 h-16 rounded-full bg-white/10 flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                <svg class="w-8 h-8 text-white ml-1" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M8 5v14l11-7z"/>
                </svg>
              </div>
            </div>

            <!-- Duration badge -->
            <div class="absolute bottom-2 right-2 px-2 py-1 rounded bg-black/70 text-white text-xs font-mono">
              {video.duration}
            </div>

            <!-- Platform icon -->
            <div class="absolute top-2 left-2 w-8 h-8 rounded-full bg-black/50 flex items-center justify-center text-white">
              <Fragment set:html={platformIcons[video.platform]} />
            </div>
          </div>

          <!-- Content -->
          <div class="p-4">
            <!-- Category -->
            <span
              class="inline-block px-2 py-1 rounded text-xs mb-2"
              style={`background: ${categoryColors[video.category] || '#4B3F72'}20; color: ${categoryColors[video.category] || '#4B3F72'};`}
            >
              {video.category}
            </span>

            <!-- Title -->
            <h3 class="text-lg font-semibold text-white mb-2 group-hover:text-[#E85D75] transition-colors">
              {video.title}
            </h3>

            <!-- Description -->
            <p class="text-white/50 text-sm line-clamp-2">
              {video.description}
            </p>
          </div>
        </div>
      ))}
    </div>

    <!-- View more -->
    <div class="mt-12 text-center">
      <a
        href="https://youtube.com/@awakenedai"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 px-6 py-3 rounded-full bg-[#E85D75]/20 text-[#E85D75] border border-[#E85D75]/30 hover:bg-[#E85D75]/30 transition-colors"
